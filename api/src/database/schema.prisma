// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  password      String
  phone         String?
  first_name    String?
  last_name     String?
  push_token    String?
  profile_photo String? @db.VarChar(200)
  timezone      String? @db.VarChar(20)

  @@map(name: "admin_users")
}

model AdminPasswordReset {
  id          Int     @id @default(autoincrement())
  email       String  @unique @db.VarChar(200)
  reset_code  String  @db.VarChar(200)
  reset_token String? @db.VarChar(200)

  @@map(name: "admin_password_resets")
}

model OtpVerification {
  id    Int     @id @default(autoincrement())
  otp   Int
  email String  @unique @db.VarChar(200)
  phone String? @db.VarChar(200)

  @@map(name: "otp_verifications")
}

model Setting {
  id    Int     @id @default(autoincrement())
  key   String  @unique
  value String?

  @@map(name: "settings")
}

model ResetPassword {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  token       String
  otp         String  @db.VarChar(10)
  role        String
  is_verified Boolean @default(false)

  @@map(name: "reset_password")
}

model NotificationTemplate {
  id               Int      @id @default(autoincrement())
  name             String?
  is_sms_enabled   Boolean  @default(false)
  is_email_enabled Boolean  @default(false)
  is_push_enabled  Boolean  @default(false)
  email_subject    String?
  email_content    String?
  sms_content      String?
  push_title       String?
  push_content     String?
  slug             String?  @unique
  description      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map(name: "notification_templates")
}

model User {
  id            Int        @id @default(autoincrement())
  first_name    String?
  last_name     String?
  email         String?    @unique @db.VarChar(200)
  phone         String?    @unique @db.VarChar(200)
  password      String?
  profile_image String?
  is_verified   Boolean    @default(false)
  description   String?
  role          String     @default("user")
  login_type    LOGIN_TYPE @default(EMAIL)

  @@map(name: "users")
}

enum LOGIN_TYPE {
  EMAIL
  GOOGLE
  FACEBOOK
}

model Attachment {
  id         Int      @id @default(autoincrement())
  url        String
  datetime   DateTime @default(now())
  sort_order Int      @default(1)

  @@map(name: "attachments")
}